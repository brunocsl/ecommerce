@model ecommerce.Entidades.Produto

@{
    ViewBag.Title = "Adiciona";
}

<h2>Adiciona</h2>


@using (Html.BeginForm("Adiciona", "Produto", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(p => p.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(p => p.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Preco, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(p => p.Preco, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.Preco, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para a lista de produtos", "Index")
</div>